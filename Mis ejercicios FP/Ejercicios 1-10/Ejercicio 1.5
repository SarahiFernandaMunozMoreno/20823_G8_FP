#include <stdio.h>
int main() {
    int x;
    printf("Ingrese el número de segundos: ");
    scanf("%d", &x);
    int dias = x / 86400;
    x = x % 86400;
    int horas = x / 3600;
    x = x % 3600;
    int minutos = x / 60;
    int segundos = x % 60;
    printf("Equivale a:\n");
    printf("%d días, %d horas, %d minutos, %d segundos\n", 
           dias, horas, minutos, segundos);
    return 0;
}
