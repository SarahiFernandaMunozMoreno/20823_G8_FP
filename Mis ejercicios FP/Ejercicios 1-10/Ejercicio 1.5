#include <iostream>
using namespace std;

int main() {
    int x;
    cout << "Ingrese el número de segundos: ";
    cin >> x;
    
    int dias = x / 86400;
    x = x % 86400;
    
    int horas = x / 3600;
    x = x % 3600;

    int minutos = x / 60;
    int segundos = x % 60;

    cout << "Equivale a:" << endl;
    cout << dias << " días, " 
         << horas << " horas, " 
         << minutos << " minutos, " 
         << segundos << " segundos" << endl;

    return 0;
}
