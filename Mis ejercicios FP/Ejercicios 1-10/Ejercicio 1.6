#include <stdio.h>

int main() {
    float suma = 0.0f;  // i -> suma (nombre mÃ¡s descriptivo)
    float contador = 0.0f;  // l -> contador
    float media;
    float numero;

    printf("Calculadora de media de numeros positivos\n");
    printf("Ingrese un numero positivo (negativo para terminar): ");
    scanf("%f", &numero);

    while (numero > 0) {
        suma += numero;  // Equivalente a i = i + numero
        contador++;
        
        printf("Ingrese otro numero positivo (negativo para terminar): ");
        scanf("%f", &numero);
    }

    if (contador > 0) {
        media = suma / contador;
        printf("\nLa media de los %.0f numeros ingresados es: %.4f\n", contador, media);
    } else {
        printf("\nNo se ingresaron numeros positivos.\n");
    }

    return 0;
}
