#include <stdio.h> 
int main() {
    float nota;  
    do {
        printf("Ingrese una nota entre 0 y 10: ");
        scanf("%f", &nota);  
        if (nota < 0 || nota > 10) {
            printf("Nota invalida. Debe estar entre 0 y 10.\n");
        }
    } while (nota < 0 || nota > 10);  
    printf("Nota valida ingresada: %.2f\n", nota);  
    return 0;  
}
