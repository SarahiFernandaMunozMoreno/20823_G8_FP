#include <stdio.h>

int main() {
    int i;
    int L;
    int n;
    
    printf("Inserte la cantidad de numeros a sumar:\n");
    scanf("%d", &L);
    
    n = 0;
    for (i = 1; i <= L; ++i) {
        n = n + i;
    }
    
    printf("La suma de los numeros es: %d\n", n);
    return 0;
}
