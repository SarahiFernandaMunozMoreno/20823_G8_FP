#include <stdio.h>
int main() {
    int N_1;
    printf("Ingrese numeros (negativo para terminar):\n");
    
    while (1) {
        printf("> ");
        if (scanf("%d", &N_1) != 1) break;  // Si la entrada no es un número válido
        
        if (N_1 < 0) break;
        printf("Numero ingresado: %d\n", N_1);
    }
    printf("Fin del programa (se ingreso un negativo o entrada invalida).\n");
    return 0;
}
